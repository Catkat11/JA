<Window x:Class="MAIN.View.HistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Histogram Window" Height="450" Width="800">
    <Grid>
        <oxy:PlotView Model="{Binding PlotModelRBefore}" RenderTransformOrigin="0.504,0.408" Margin="10,10,400,0" Height="139" VerticalAlignment="Top"/>
        <oxy:PlotView Model="{Binding PlotModelRAfter}" RenderTransformOrigin="0.488,0.481" Margin="400,10,10,0" Height="139" VerticalAlignment="Top"/>

        <oxy:PlotView Model="{Binding PlotModelGBefore}" RenderTransformOrigin="0.488,0.481" Margin="10,141,400,0" Height="139" VerticalAlignment="Top"/>
        <oxy:PlotView Model="{Binding PlotModelGAfter}" RenderTransformOrigin="0.488,0.481" Margin="400,141,10,0" Height="139" VerticalAlignment="Top"/>

        <oxy:PlotView Model="{Binding PlotModelBBefore}" RenderTransformOrigin="0.488,0.481" Margin="10,285,400,0" Height="139" VerticalAlignment="Top"/>
        <oxy:PlotView Model="{Binding PlotModelBAfter}" RenderTransformOrigin="0.488,0.481" Margin="400,285,10,0" Height="139" VerticalAlignment="Top"/>
    </Grid>
</Window>
